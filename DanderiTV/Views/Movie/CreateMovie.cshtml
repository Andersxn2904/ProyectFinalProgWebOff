@using DanderiTV.Layer.Application.Models.Serie;
@model SaveMovieModel;
@{
    bool editMode = Model.ID == 0 ? false : true;
    var years = Enumerable.Range(1970, 2024 - 1970 + 1).Select(x => new SelectListItem(x.ToString(), x.ToString()));


    ViewData["Title"] = "Create Serie";
}

<div class="container">
    <div class="col-6 offset-3">
        <h1>
            @(editMode ? $"Edit series: {Model.Title}" : "New series")
        </h1>
        <form class="needs-validation" method="post" asp-controller="Movie" asp-action="@(editMode ? "Edit" : "Create")" novalidate="">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Title" class="form-label">Tittle</label>
                    <input type="text" asp-for="Title" class="form-control" id="Name" placeholder="" required="">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="ImagePath" class="form-label">Cover URL</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-link-45deg" viewBox="0 0 16 16">
                                <path d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1 1 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4 4 0 0 1-.128-1.287z" />
                                <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243z" />
                            </svg>
                        </span>
                        <input asp-for="ImagePath" type="text" class="form-control" id="username" placeholder="Username" required="">
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="TrailerPath" class="form-label">Video URL</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-link-45deg" viewBox="0 0 16 16">
                                <path d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1 1 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4 4 0 0 1-.128-1.287z" />
                                <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243z" />
                            </svg>
                        </span>
                        <input asp-for="TrailerPath" type="text" class="form-control" id="username" placeholder="Username" required="">
                        <span asp-validation-for="TrailerPath" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="DirectorID" class="form-label">Producer</label>
                    <select asp-for="DirectorID" asp-items="@(new SelectList(Model.Directors, "ID", "Name"))" class="form-select">
                        <option value="">Choose...</option>
                    </select>
                    <span asp-validation-for="DirectorID" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Year" class="form-label">Year</label>
                    <select asp-for="Year" asp-items="@(new SelectList(years, "Value", "Text"))" class="form-select">
                        <option value="">Choose...</option>
                    </select>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Actors" class="form-label">Main Genre</label>
                    <select asp-for="Actors" asp-items="@(new SelectList(Model.Actors, "ID", "Name"))" name="Actors" id="Actors" multiple>
                        <option value="">Choose...</option>
                    </select>
                    <span asp-validation-for="Actors" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label">Descrption</label>
                    <textarea asp-for="Description" class="form-control" id="Description" style="height:100px" placeholder="Description..." required="">
                   </textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

            </div>

            <input type="hidden" asp-for="ID" />

            <div class="mt-3">
                <button class="btn btn-success" type="submit">Save</button>
                <a asp-controller="Movie" asp-action="Index" class="btn btn-warning">Go back</a>
            </div>
        </form>
    </div>


</div>

<script>
    new MultiSelectTag('Actors')  // id
</script>
